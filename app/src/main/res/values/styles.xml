<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--   . child style for title -->
    <style name="banner_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_banner</item>
        <item name="android:layout_marginTop">@dimen/step_normal_plus</item>
    </style>


    <!--  5   -->
    <!-- ******************************** Image ********************************-->
    <style name="iv_icon">
        <item name="android:layout_width">@dimen/card_icon_normal</item>
        <item name="android:layout_height">@dimen/card_icon_normal</item>
        <item name="android:contentDescription">@string/no_description</item>
        <item name="android:src">@drawable/baseline_blood_24</item>
    </style>



    <!--  5   -->
    <!-- ******************************** 1. text ********************************-->
    <style name="txt_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="txt_title" parent="txt_common">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/grey_title_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

   <style name="txt_title_margin_top" parent="txt_title">
        <item name="android:layout_marginTop">@dimen/margin_top_normal</item>
    </style>

    <style name="txt_paragraph" parent="txt_common">
        <item name="android:textSize">@dimen/text_size_normal_plus</item>
        <item name="android:layout_marginTop">@dimen/margin_top_normal</item>
    </style>

    <style name="txt_title_inner_left_icon" parent="txt_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/indent_icon_small</item>
        <item name="android:paddingEnd">@dimen/indent_icon_small</item>
        <item name="android:textSize">@dimen/text_size_normal_plus</item>
    </style>

    <style name="txt_title_inner_left_icon_center" parent="txt_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">@dimen/indent_icon_small</item>
        <item name="android:paddingEnd">@dimen/indent_icon_small</item>
        <item name="android:textSize">@dimen/text_size_normal_plus</item>
    </style>

    <style name="txt_hint_inner" parent="txt_title">
        <item name="android:textSize">@dimen/text_size_normal_plus</item>
    </style>

    <style name="txt_hint_inner_right" parent="txt_title">
        <item name="android:textSize">@dimen/text_size_normal_plus</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/step_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:contentDescription">@string/no_description</item>
        <item name="android:textColor">@color/white</item>
        <!--        <item name="android:textColor">@color/grey_700</item>-->
    </style>


    <!--    -->
    <!--   1.1. button style for title -->
    <style name="title_button_top" parent="txt_title">
        <item name="android:layout_marginTop">@dimen/step_large_plus</item>
        <item name="android:layout_marginStart">@dimen/step_large</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/grey_title_dark</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--   1.1.4. button style for title -->
    <style name="title_button_start" parent="title_button_top">
        <item name="android:layout_marginTop">@dimen/step_zero</item>
        <item name="android:layout_marginStart">@dimen/step_normal_plus</item>
        <item name="android:textSize">@dimen/text_size_normal_plus</item>
    </style>
    <!--   1.1.1. child style for title -->
    <style name="title_button_top_center" parent="title_button_top">
        <item name="android:layout_marginStart">@dimen/step_zero</item>
    </style>
    <!--   1.1.1. child style for title -->
    <style name="title_button_top_small_center" parent="title_button_top">
        <item name="android:layout_marginStart">@dimen/step_zero</item>
        <item name="android:layout_marginTop">@dimen/step_small</item>
    </style>
    <!--   1.1.2 child style for text -->
    <style name="title_button_top_nostart" parent="title_button_top">
        <item name="android:layout_marginStart">@dimen/step_zero</item>
        <item name="android:layout_marginTop">@dimen/step_zero</item>
        <item name="android:textSize">@dimen/text_size_normal_plus</item>
    </style>
    <!--   1.1.3 child style for text -->
    <style name="title_button_top_start" parent="title_button_top">
        <item name="android:layout_marginStart">@dimen/step_normal_plus</item>
        <item name="android:layout_marginTop">@dimen/step_zero</item>
        <item name="android:textSize">@dimen/text_size_normal_plus</item>
    </style>
    <!--   1.1.4. child style for explanation -->
    <style name="heading_title_explanation" parent="txt_title">
        <item name="android:layout_margin">@dimen/step_zero</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>


    <!--  ******************************** banner ********************************-->
    <style name="style_card_banner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/radius_large</item>
        <item name="cardElevation">@dimen/elevation_normal</item>
        <item name="android:layout_marginTop">@dimen/step_large</item>
    </style>

    <style name="style_card_banner_back">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="cardCornerRadius">@dimen/radius_large</item>
        <item name="cardElevation">@dimen/elevation_normal</item>
    </style>


    <!-- ********************************  Card  ********************************  -->

    <!--   2x constraint -->
    <style name="card_constraint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/card_radius_normal_for_top</item>
        <item name="android:paddingBottom">@dimen/card_radius_normal_for_top</item>
        <item name="android:paddingStart">@dimen/card_radius_normal</item>
        <item name="android:paddingEnd">@dimen/card_radius_normal</item>
    </style>

    <!--   2 card -->
    <style name="card_common">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/step_zero</item>
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="cardElevation">@dimen/step_zero</item>
        <item name="strokeWidth">@dimen/step_zero</item>
        <item name="android:layout_marginTop">@dimen/step_normal_too</item>
    </style>
    <!--  do not use "app:cardCornerRadius" but "cardCornerRadius" only -->

    <style name="card_common_btn" parent="card_common">
        <item name="cardElevation">@dimen/elevation_normal</item>
        <item name="cardBackgroundColor">@color/amber_normal</item>
    </style>

    <style name="card_common_btn_margin_top" parent="card_common_btn">
        <item name="android:layout_marginTop">@dimen/margin_top_large</item>
    </style>

    <!--   2.1. banner -->
    <style name="card_banner" parent="card_common"></style>


    <!--   2.2. parent -->
    <style name="card_parent" parent="card_common_btn"></style>

    <!--   2.3. child -->
    <style name="card_child" parent="card_common">
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/step_zero</item>
        <item name="cardBackgroundColor">#000000FF</item>
    </style>
    <!-- #55 + 0000FF, где 55 - уровень прозрачности -->

    <style name="card_child_next" parent="card_child">
        <item name="android:layout_marginEnd">@dimen/step_zero</item>
    </style>

    <style name="card_child_brown" parent="card_child">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="card_child_blue" parent="card_child">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/step_x_small</item>
    </style>

    <style name="card_child_green" parent="card_child">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/step_x_small</item>
    </style>


    <!--   2.4. info folder -->
    <style name="card_info" parent="card_common">
        <item name="android:layout_marginTop">@dimen/margin_top_large</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/brown_background_dark</item>
    </style>

    <style name="card_info_next" parent="card_info">
        <item name="android:layout_marginTop">@dimen/margin_top_normal</item>
    </style>


    <!--    -->
    <!--    -->
    <style name="style_card_view_long" parent="card_common">
        <item name="android:layout_height">@dimen/step_zero</item>
        <item name="android:layout_marginTop">@dimen/step_normal</item>
        <item name="android:layout_marginBottom">@dimen/step_minus_small</item>
    </style>

    <style name="style_card_view_back">
        <item name="android:layout_width">@dimen/step_zero</item>
        <item name="android:layout_height">@dimen/step_zero</item>
        <item name="cardCornerRadius">@dimen/radius_large</item>
        <item name="cardElevation">@dimen/elevation_normal</item>
        <item name="strokeWidth">@dimen/step_zero</item>
        <item name="android:layout_marginTop">@dimen/step_x_large</item>
