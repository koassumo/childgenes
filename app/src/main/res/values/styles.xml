    <style name="style_image_banner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_transparent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:contentDescription">@string/no_description</item>
    </style>


    <!--   4.0 line style for image inside card -->
    <style name="style_line">
        <item name="android:layout_width">@dimen/step_xxx_small</item>
