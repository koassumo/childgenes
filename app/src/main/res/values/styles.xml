    </style>


     <!--   3.2 parent style for image inside card QUESTION -->
    <style name="style_image_inside_card_view_question">
        <item name="android:layout_width">@dimen/step_xxx_large</item>
        <item name="android:layout_height">@dimen/step_xx_large</item>
        <item name="android:layout_marginTop">@dimen/step_xx_large</item>
        <item name="android:layout_marginStart">@dimen/step_x_large</item>
