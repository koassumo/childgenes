<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--   . child style for title -->
    <style name="banner_text" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_banner</item>
        <item name="android:layout_marginTop">@dimen/step_normal_plus</item>
    </style>



    <!--  1.  parent style for any title/text-->
    <style name="p_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <!--   1.1. button style for title -->
    <style name="title_button_top" parent="p_title">
        <item name="android:layout_marginTop">@dimen/step_large_plus</item>
        <item name="android:layout_marginStart">@dimen/step_large</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/grey_title_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--   1.1.4. button style for title -->
    <style name="title_button_start" parent="title_button_top">
        <item name="android:layout_marginTop">@dimen/step_zero</item>
        <item name="android:layout_marginStart">@dimen/step_normal_plus</item>
        <item name="android:textSize">@dimen/text_size_normal_plus</item>
    </style>

    <!--   1.1.1. child style for title -->
    <style name="title_button_top_center" parent="title_button_top">
        <item name="android:layout_marginStart">@dimen/step_zero</item>
    </style>




    <!--   1.1.2 child style for text -->
    <style name="title_button_top_nostart" parent="title_button_top">
        <item name="android:layout_marginStart">@dimen/step_zero</item>
        <item name="android:layout_marginTop">@dimen/step_zero</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!--   1.1.3 child style for text -->
    <style name="title_button_top_start" parent="title_button_top">
        <item name="android:layout_marginStart">@dimen/step_normal_plus</item>
        <item name="android:layout_marginTop">@dimen/step_zero</item>
        <item name="android:textSize">@dimen/text_size_normal_plus</item>
    </style>

    <!--   1.1.4 child style for text -->
    <style name="title_button_bottom_start" parent="title_button_top">
        <item name="android:layout_marginStart">@dimen/step_normal_plus</item>
        <item name="android:layout_marginBottom">@dimen/step_normal_pl</item>
        <item name="android:textSize">@dimen/text_size_normal_plus</item>
    </style>



    <!--   1.1.4. child style for explanation -->
    <style name="heading_title_explanation" parent="p_title">
        <item name="android:layout_margin">@dimen/step_zero</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>



    <!--   banner -->
    <style name="style_card_banner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/radius_large</item>
        <item name="cardElevation">@dimen/elevation_normal</item>
        <item name="android:layout_marginTop">@dimen/step_large</item>
    </style>

    <style name="style_card_banner_back">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="cardCornerRadius">@dimen/radius_large</item>
        <item name="cardElevation">@dimen/elevation_normal</item>
    </style>







    <!--   2.0 parent style for card -->
    <!--  do not use "app:cardCornerRadius" but "cardCornerRadius" only -->
    <style name="style_card_view">
        <item name="android:layout_height">@dimen/card_view_height</item>
        <item name="android:layout_width">@dimen/step_zero</item>
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="cardElevation">@dimen/elevation_small</item>
        <item name="strokeWidth">@dimen/step_zero</item>
        <item name="android:layout_marginTop">@dimen/step_normal</item>
    </style>

    <style name="style_card_view_elevation" parent="style_card_view">
        <item name="cardElevation">@dimen/elevation_normal</item>
    </style>


    <style name="style_card_view_long" parent="style_card_view">
        <item name="android:layout_height">@dimen/step_zero</item>
        <item name="android:layout_marginTop">@dimen/step_normal</item>
        <item name="android:layout_marginBottom">@dimen/step_minus_small</item>
    </style>


    <style name="style_card_view_back">
        <item name="android:layout_width">@dimen/step_zero</item>
        <item name="android:layout_height">@dimen/step_zero</item>
        <item name="cardCornerRadius">@dimen/radius_large</item>
        <item name="cardElevation">@dimen/elevation_normal</item>
        <item name="strokeWidth">@dimen/step_zero</item>
        <item name="android:layout_marginTop">@dimen/step_x_large</item>
        <item name="android:layout_marginBottom">@dimen/step_minus_normal</item>
        <item name="android:layout_marginStart">@dimen/step_zero</item>
        <item name="android:layout_marginEnd">@dimen/step_zero</item>
    </style>

    <style name="style_card_view_back_child" parent="style_card_view_back">
        <item name="android:layout_marginStart">@dimen/step_normal_plus</item>
        <item name="android:layout_marginEnd">@dimen/step_normal_plus</item>
    </style>

    <!--   2.1. child style for title -->
    <style name="style_card_view_top" parent="style_card_view">
        <item name="android:layout_marginTop">@dimen/step_normal</item>
    </style>

    <!--   2.2. child style for select -->
    <style name="style_card_view_end" parent="style_card_view">
        <item name="android:layout_marginTop">@dimen/step_normal</item>
        <item name="android:layout_marginEnd">@dimen/step_zero</item>
    </style>

    <!--   2.4. child style for children -->
    <style name="style_card_view_children" parent="style_card_view">
        <item name="android:layout_width">@dimen/card_view_width_small</item>
        <item name="android:layout_height">@dimen/card_view_height_small</item>
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="android:layout_marginTop">@dimen/step_x_small</item>
        <item name="android:layout_marginEnd">@dimen/step_normal</item>
    </style>

    <style name="style_card_view_children_pure">
        <item name="android:layout_height">@dimen/card_view_height_short</item>
        <item name="android:layout_width">@dimen/step_zero</item>
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="android:layout_marginTop">@dimen/step_normal</item>
        <item name="android:layout_marginStart">@dimen/step_large_plus</item>
        <item name="cardElevation">@dimen/step_zero</item>
    </style>

    <style name="style_card_view_children_pure_nn">
        <item name="android:layout_height">@dimen/card_view_height_short</item>
        <item name="android:layout_width">@dimen/step_zero</item>
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="android:layout_marginTop">@dimen/step_normal</item>
        <item name="android:layout_marginStart">@dimen/step_large_plus</item>
        <item name="cardElevation">@dimen/step_small</item>
    </style>


    <!--   2.4. child style for children -->
    <style name="style_card_view_children_first" parent="style_card_view_children">
        <item name="android:layout_marginTop">@dimen/step_normal_plus</item>
    </style>

    <!--   3.0 parent style for image inside card -->
    <style name="style_image_inside_card_view_old">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">@dimen/step_normal</item>
    </style>






    <!--   3.0 new -->
    <style name="style_image_inside_card_view">
        <item name="android:layout_marginTop">@dimen/step_normal</item>
        <item name="android:layout_marginStart">@dimen/step_normal_plus</item>
        <item name="android:layout_marginEnd">@dimen/step_normal_plus</item>

    </style>
