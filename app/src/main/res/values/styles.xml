        <item name="android:layout_marginTop">@dimen/step_normal</item>
        <item name="android:layout_marginStart">@dimen/step_large_plus</item>
        <item name="cardElevation">@dimen/step_zero</item>
    </style>

    <style name="style_card_view_children_pure_nn">
        <item name="android:layout_height">@dimen/card_height_short</item>
        <item name="android:layout_width">@dimen/step_zero</item>
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="android:layout_marginTop">@dimen/step_normal</item>
        <item name="android:layout_marginStart">@dimen/step_large_plus</item>
        <item name="cardElevation">@dimen/step_small</item>
    </style>


    <!--   2.4. child style for children -->
    <style name="style_card_view_children_first" parent="style_card_view_children">
        <item name="android:layout_marginTop">@dimen/step_normal_plus</item>
    </style>

