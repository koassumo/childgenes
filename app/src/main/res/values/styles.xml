        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="android:layout_marginTop">@dimen/step_x_small</item>
        <item name="android:layout_marginEnd">@dimen/step_normal</item>
    </style>

    <style name="style_card_view_children_pure">
        <item name="android:layout_height">@dimen/card_height_short</item>
        <item name="android:layout_width">@dimen/step_zero</item>
