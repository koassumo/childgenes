        <item name="android:layout_margin">@dimen/step_zero</item>
        <item name="android:background">@color/brown_200</item>
    </style>

    <style name="style_line_vertical" parent="style_line">
        <item name="android:layout_height">@dimen/step_line_short</item>
    </style>

    <style name="style_line_vertical_long" parent="style_line">
        <item name="android:layout_height">@dimen/step_line_long</item>
    </style>


    <style name="style_line_horizontal" parent="style_line">
        <item name="android:layout_width">@dimen/step_zero</item>
    </style>


    <!--   -->
    <style name="my_progress_bar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/step_large</item>
        <item name="android:max">100</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:progress">50</item>
        <item name="android:progressTint">@color/grey_300</item>
    </style>


    <style name="margin_start_top_normal">
        <item name="android:layout_marginTop">@dimen/step_normal</item>
        <item name="android:layout_marginStart">@dimen/step_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--    если нужен только top-->
    <style name="margin_top_normal">
        <item name="android:layout_marginTop">@dimen/step_normal</item>
        <item name="android:layout_marginStart">@dimen/step_zero</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--    если нужен только end-->
    <style name="margin_start_normal">
        <item name="android:layout_marginTop">@dimen/step_zero</item>
        <item name="android:layout_marginStart">@dimen/step_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--    для длинных компонентов, у кот. добавляется странный margin сверху и снизу-->
