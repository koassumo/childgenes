    <!--   3.1 parent style for image inside card question -->
    <style name="style_image_inside_card_view_question_old">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">@dimen/step_large</item>
