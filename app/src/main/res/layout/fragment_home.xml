            style="@style/title_button_top_center"
            android:text="@string/mother"
            app:layout_constraintEnd_toStartOf="@+id/guide_line_centre_vertical"
            app:layout_constraintStart_toStartOf="@+id/guide_line_start"
            app:layout_constraintTop_toBottomOf="@id/banner_bottom_text" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_mother"
            style="@style/style_card_view_elevation"
            app:cardBackgroundColor="@color/grey_400"
            app:layout_constraintEnd_toStartOf="@+id/guide_line_centre_vertical"
            app:layout_constraintStart_toStartOf="@+id/guide_line_start"
            app:layout_constraintTop_toBottomOf="@+id/subtitle_message_mother">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_mother_gradient_brown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_brown"
                    android:contentDescription="@string/no_description"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_mother_gradient_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_blue"
                    android:contentDescription="@string/no_description"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_mother_gradient_green"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_green"
                    android:contentDescription="@string/no_description"
                    android:visibility="gone" />

                <include
                    layout="@layout/symbol_eye"
                    tools:layout_editor_absoluteX="20dp"
                    tools:layout_editor_absoluteY="13dp" />

                <TextView
                    android:id="@+id/tv_btn_mother_select"
                    style="@style/title_button_bottom_start"
                    android:text="@string/select_color"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <ImageView
            android:id="@+id/iv_mother_question"
            style="@style/style_image_inside_card_view_question"
            android:contentDescription="@string/no_description"
            android:src="@drawable/baseline_pan_tool_alt_24"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/card_mother"
            app:layout_constraintTop_toTopOf="@id/card_mother"
            />

