        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_explain_folded"
            style="@style/style_card_view_end"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:cardBackgroundColor="@color/grey_400"
            android:layout_marginTop="@dimen/step_large_plus"
            app:layout_constraintEnd_toStartOf="@+id/guide_line_end"
            app:layout_constraintStart_toStartOf="@+id/guide_line_start"
            app:layout_constraintTop_toBottomOf="@id/card_child_green">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/text_size_small"
                android:paddingStart="@dimen/step_normal_plus">

                <include layout="@layout/symbol_info"
                    android:id="@+id/title_info"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_arrow_down"
                    style="@style/title_button_top"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_margin="@dimen/step_zero"
                    android:layout_marginEnd="@dimen/step_large"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/title_info"
                    app:layout_constraintBottom_toBottomOf="@id/title_info"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_36" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_arrow_up"
                    style="@style/title_button_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/step_zero"
                    android:layout_marginEnd="@dimen/step_xx_large"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/message_explain_unfolded"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_up_36" />

                <TextView
                    android:id="@+id/message_explain_unfolded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:justificationMode="inter_word"
                    android:text="@string/explanation_eyes"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_info" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

