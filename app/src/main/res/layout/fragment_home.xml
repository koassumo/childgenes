<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/step_zero"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--  Grids / guide lines  -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/eye_guide_line_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/eye_guide_line_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/eye_guide_line_start_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.09"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/eye_guide_line_end_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.91"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/eye_guide_line_centre_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.48"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/eye_guide_line_centre_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.52"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/eye_guide_line_centre_left_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/eye_guide_line_centre_right_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55"
            app:layout_constraintTop_toTopOf="parent" />


        <!--Banner-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/eye_banner_eyes"
            style="@style/style_card_view_bottom"
            android:layout_height="270dp"
            android:layout_marginBottom="@dimen/step_x_large"
            app:layout_constraintEnd_toStartOf="@id/eye_guide_line_end"
            app:layout_constraintStart_toStartOf="@id/eye_guide_line_start"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/eye_guide_line_title_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.76" />

                <ImageView
                    android:id="@+id/eye_iv_eyes"
                    style="@style/style_image_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/eyes"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/eye_iv_line_title_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:alpha="0.1"
                    android:background="@color/black"
                    android:contentDescription="@string/no_description"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/eye_guide_line_title_bottom" />

                <TextView
                    style="@style/banner_text"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/step_normal"
                    android:elevation="@dimen/elevation_normal"
                    android:text="@string/title_home"
                    android:textColor="@color/white"
                    android:textFontWeight="900"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/space_after_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/step_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eye_banner_eyes">

        </View>


        <!--Segment grandparents-->
        <FrameLayout
            android:id="@+id/eye_segment_grandparents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/space_after_banner">

            <include
                android:id="@+id/eye_include_grandparents"
                layout="@layout/eye_segment_grandparents"/>

<!--            <include-->
<!--                android:id="@+id/tmptt"-->
<!--                layout="@layout/tmp_t"-->
/>
        </FrameLayout>


        <!--Mother-->
        <TextView
            android:id="@+id/eye_subtitle_message_mother"
            style="@style/title_button_top_small_center"
            android:text="@string/mother"
            app:layout_constraintEnd_toStartOf="@id/eye_guide_line_centre_left"
            app:layout_constraintStart_toStartOf="@id/eye_guide_line_start_inner"
            app:layout_constraintTop_toBottomOf="@id/eye_segment_grandparents" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/eye_card_mother"
            style="@style/style_card_view_elevation"
            app:cardBackgroundColor="@color/grey_400"
            app:layout_constraintEnd_toStartOf="@id/eye_guide_line_centre_left"
            app:layout_constraintStart_toStartOf="@id/eye_guide_line_start_inner"
            app:layout_constraintTop_toBottomOf="@id/eye_subtitle_message_mother">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/eye_iv_mother_gradient_brown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_brown"
                    android:contentDescription="@string/no_description"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/eye_iv_mother_gradient_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_blue"
                    android:contentDescription="@string/no_description"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/eye_iv_mother_gradient_green"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_green"
                    android:contentDescription="@string/no_description"
                    android:visibility="invisible" />

                <include
                    layout="@layout/symbol_eye"
                    tools:layout_editor_absoluteX="20dp"
                    tools:layout_editor_absoluteY="13dp" />

                <TextView
                    android:id="@+id/eye_tv_btn_mother_select"
                    style="@style/title_button_bottom_start"
                    android:text="@string/select_color"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <ImageView
            android:id="@+id/eye_iv_mother_question"
            style="@style/style_image_inside_card_view_question"
            android:contentDescription="@string/no_description"
            android:src="@drawable/baseline_pan_tool_alt_24"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/eye_card_mother"
            app:layout_constraintTop_toTopOf="@id/eye_card_mother" />

        <!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
        <!--        android:id="@+id/eye_fab_brown_eyes"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:backgroundTint="@color/eyesColorBrown"-->
        <!--        android:elevation="@dimen/step_small"-->
        <!--        android:textAllCaps="false"-->
        <!--        android:contentDescription="@string/no_description"-->

        <!--        android:textAlignment="center"-->
        <!--        app:layout_constraintEnd_toStartOf="@id/eye_guide_line_centre_vertical_second"-->
        <!--        app:layout_constraintStart_toStartOf="@id/eye_card_mother"-->
        <!--        app:layout_constraintTop_toTopOf="@id/eye_card_mother" />-->


        <!--  Father  -->
        <!--        <com.google.android.material.card.MaterialCardView-->
        <!--            android:id="@+id/eye_card_father_back"-->
        <!--            style="@style/style_card_view_back"-->
        <!--            app:cardBackgroundColor="@color/white_transparent"-->
        <!--            app:layout_constraintBottom_toBottomOf="@id/eye_card_father"-->
        <!--            app:layout_constraintEnd_toStartOf="@id/eye_guide_line_end"-->
        <!--            app:layout_constraintStart_toStartOf="@id/eye_guide_line_centre_vertical_second"-->
        <!--            app:layout_constraintTop_toBottomOf="@id/eye_banner_bottom_text" />-->


        <!--Father-->
        <TextView
            android:id="@+id/eye_subtitle_message_father"
            style="@style/title_button_top_small_center"
            android:text="@string/father"
            app:layout_constraintBottom_toBottomOf="@+id/eye_subtitle_message_mother"
            app:layout_constraintEnd_toStartOf="@id/eye_guide_line_end_inner"
            app:layout_constraintStart_toStartOf="@id/eye_guide_line_centre_right"
            app:layout_constraintTop_toBottomOf="@id/eye_segment_grandparents" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/eye_card_father"
            style="@style/style_card_view_elevation"
            app:cardBackgroundColor="@color/grey_400"
            app:layout_constraintEnd_toStartOf="@id/eye_guide_line_end_inner"
            app:layout_constraintStart_toStartOf="@id/eye_guide_line_centre_right"
            app:layout_constraintTop_toBottomOf="@id/eye_subtitle_message_father">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/eye_iv_father_gradient_brown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_brown"
                    android:contentDescription="@string/no_description"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/eye_iv_father_gradient_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_blue"
                    android:contentDescription="@string/no_description"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/eye_iv_father_gradient_green"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_green"
                    android:contentDescription="@string/no_description"
                    android:visibility="invisible" />

                <include
                    layout="@layout/symbol_eye"
                    tools:layout_editor_absoluteX="20dp"
                    tools:layout_editor_absoluteY="12dp" />

                <TextView
                    android:id="@+id/eye_tv_btn_father_select"
                    style="@style/title_button_bottom_start"
                    android:text="@string/select_color"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/eye_iv_father_question"
            style="@style/style_image_inside_card_view_question"
            android:contentDescription="@string/no_description"
            android:src="@drawable/baseline_pan_tool_alt_24"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/eye_guide_line_centre_right"
            app:layout_constraintTop_toTopOf="@id/eye_card_father" />


        <!--Segment child-->
        <FrameLayout
            android:id="@+id/eye_segment_child"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/eye_card_father"
            >

            <include
                layout="@layout/eye_segment_kinder"/>
        </FrameLayout>

        <View
            android:id="@+id/space_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/step_xxx_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eye_segment_child">

        </View>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
