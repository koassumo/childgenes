                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="@+id/guide_line_grey_center"
                    app:layout_constraintTop_toBottomOf="@+id/progress_bar_grey" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- 3 Green -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_child_green"
            style="@style/style_card_view_end"
            android:visibility="visible"
            app:cardBackgroundColor="@color/eyesColorGreen"
            app:layout_constraintEnd_toStartOf="@+id/guide_line_end"
