<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/step_zero"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/step_xxx_large">

        <!--  Grids / guide lines  -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line_centre_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.48"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line_centre_vertical_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.52"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line_start_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line_end_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97"
            app:layout_constraintTop_toTopOf="parent" />

        <!--Banner-->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/banner_bottom_text"
            style="@style/style_card_banner_back"
            android:layout_height="270dp"
            app:layout_constraintEnd_toStartOf="@+id/guide_line_end"
            app:layout_constraintStart_toStartOf="@+id/guide_line_start"
            app:layout_constraintTop_toTopOf="@id/banner_eyes" />


        <TextView
            style="@style/banner_text"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/step_normal_pl"
            android:elevation="@dimen/elevation_normal"
            android:text="@string/title_home"
            android:textColor="@color/grey_800"
            android:textFontWeight="900"
            app:layout_constraintBottom_toBottomOf="@+id/banner_bottom_text"
            app:layout_constraintEnd_toStartOf="@+id/guide_line_end"
            app:layout_constraintStart_toStartOf="@+id/guide_line_start" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/banner_eyes"
            style="@style/style_card_banner"
            android:layout_height="200dp"

            app:layout_constraintEnd_toStartOf="@+id/guide_line_end"
            app:layout_constraintStart_toStartOf="@+id/guide_line_start"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_eyes"
                style="@style/style_image_banner"
                android:scaleType="centerCrop"
                android:src="@drawable/eyes"
                android:visibility="visible" />

        </com.google.android.material.card.MaterialCardView>


