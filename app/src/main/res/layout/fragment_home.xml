<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ui.home.HomeFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--  Grids / guide lines  -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_centre_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_centre_vertical_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.52"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Mother-->
    <TextView
        android:id="@+id/message_mother"
        style="@style/heading_title_top"
        android:text="@string/mother"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_centre_vertical"
        app:layout_constraintStart_toStartOf="@+id/guide_line_start"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_mother"
        style="@style/style_card_view"
        app:cardBackgroundColor="@color/grey_500"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_centre_vertical"
        app:layout_constraintStart_toStartOf="@+id/guide_line_start"
        app:layout_constraintTop_toBottomOf="@+id/message_mother">

        <ImageView
            android:id="@+id/iv_mother_eye"
            android:visibility="visible"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view"
            android:src="@drawable/ic_eye_24" />
        <ImageView
            android:id="@+id/iv_mother_question"
            android:visibility="visible"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view_question"
            android:src="@drawable/baseline_pan_tool_alt_24"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_mother_heart"
        style="@style/style_card_view"
        app:cardBackgroundColor="@color/grey_500"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_centre_vertical"
        app:layout_constraintStart_toStartOf="@+id/guide_line_start"
        app:layout_constraintTop_toBottomOf="@+id/card_mother">

        <ImageView
            android:id="@+id/iv_mother_heart"
            android:visibility="visible"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view"
            android:src="@drawable/baseline_bloodtype_24" />
        <ImageView
            android:id="@+id/iv_mother_heart_question"
            android:visibility="visible"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view_question"
            android:src="@drawable/baseline_pan_tool_alt_24"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_mother_height"
        style="@style/style_card_view"
        app:cardBackgroundColor="@color/grey_500"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_centre_vertical"
        app:layout_constraintStart_toStartOf="@+id/guide_line_start"
        app:layout_constraintTop_toBottomOf="@+id/card_mother_heart">

        <ImageView
            android:id="@+id/iv_mother_height"
            android:visibility="visible"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view"
            android:src="@drawable/baseline_height_24" />
        <ImageView
            android:id="@+id/iv_mother_height_question"
            android:visibility="visible"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view_question"
            android:src="@drawable/baseline_pan_tool_alt_24"/>
    </com.google.android.material.card.MaterialCardView>


    <!--  Father  -->
    <TextView
        android:id="@+id/message_father"
        style="@style/heading_title_top"
        android:text="@string/father"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_end"
        app:layout_constraintStart_toStartOf="@+id/guide_line_centre_vertical_second"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_father"
        style="@style/style_card_view"
        app:cardBackgroundColor="@color/grey_500"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_end"
        app:layout_constraintStart_toStartOf="@+id/guide_line_centre_vertical_second"
        app:layout_constraintTop_toBottomOf="@+id/message_father">

        <ImageView
            android:id="@+id/iv_father_eye"
            android:visibility="visible"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view"
            android:src="@drawable/ic_eye_24"/>

        <ImageView
            android:id="@+id/iv_father_question"
            style="@style/style_image_inside_card_view_question"
            android:layout_height="match_parent"
            android:contentDescription="@string/no_description"
            android:src="@drawable/baseline_pan_tool_alt_24"
            android:visibility="visible" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_father_heart"
        style="@style/style_card_view"
        app:cardBackgroundColor="@color/grey_500"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_end"
        app:layout_constraintStart_toStartOf="@+id/guide_line_centre_vertical_second"
        app:layout_constraintTop_toBottomOf="@+id/card_father">

        <ImageView
            android:id="@+id/iv_father_heart"
            android:visibility="visible"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view"
            android:src="@drawable/baseline_bloodtype_24" />
        <ImageView
            android:id="@+id/iv_father_heart_question"
            android:visibility="visible"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view_question"
            android:src="@drawable/baseline_pan_tool_alt_24"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_father_height"
        style="@style/style_card_view"
        app:cardBackgroundColor="@color/grey_500"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_end"
        app:layout_constraintStart_toStartOf="@+id/guide_line_centre_vertical_second"
        app:layout_constraintTop_toBottomOf="@+id/card_father_heart">

        <ImageView
            android:id="@+id/iv_father_height"
            android:visibility="visible"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view"
            android:src="@drawable/baseline_height_24" />
        <ImageView
            android:id="@+id/iv_father_height_question"
            android:visibility="visible"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view_question"
            android:src="@drawable/baseline_pan_tool_alt_24"/>
    </com.google.android.material.card.MaterialCardView>

    <!--  Child  -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_child_back"
        style="@style/style_card_view_back"
        app:layout_constraintBottom_toBottomOf="@+id/card_child_height"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_end"
        app:layout_constraintStart_toStartOf="@+id/guide_line_start"
        app:layout_constraintTop_toTopOf="@+id/message_child"
        app:cardBackgroundColor="@color/white_transparent"/>


    <TextView
        android:id="@+id/message_child"
        style="@style/heading_title_top"
        android:text="@string/child"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_end"
        app:layout_constraintStart_toStartOf="@+id/guide_line_start"
        app:layout_constraintTop_toBottomOf="@+id/card_mother_height" />

    <!-- 1 Brown-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_brown"
        style="@style/style_card_view_children_first"
        android:visibility="visible"
        app:cardBackgroundColor="@color/brown_400"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_centre_vertical"
        app:layout_constraintTop_toBottomOf="@+id/message_child"
        android:layout_marginBottom="@dimen/step_x_large">

        <ImageView
            android:id="@+id/iv_brown"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view"
            android:src="@drawable/ic_eye_24"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/message_brown"
        style="@style/heading_title_start"
        android:text=""
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/card_brown"
        app:layout_constraintStart_toStartOf="@+id/guide_line_centre_vertical"
        app:layout_constraintTop_toTopOf="@+id/card_brown" />

    <!-- 2 Blue/grey-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_grey"
        style="@style/style_card_view_children"
        android:visibility="visible"
        app:cardBackgroundColor="@color/blue_grey_400"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_centre_vertical"
        app:layout_constraintTop_toBottomOf="@+id/card_brown">

        <ImageView
            android:id="@+id/iv_grey"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view"
            android:src="@drawable/ic_eye_24" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/message_grey"
        style="@style/heading_title_start"
        android:text=""
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/card_grey"
        app:layout_constraintStart_toStartOf="@+id/guide_line_centre_vertical"
        app:layout_constraintTop_toTopOf="@+id/card_grey" />


    <!-- 3 Green -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_green"
        style="@style/style_card_view_children"
        android:visibility="visible"
        app:cardBackgroundColor="@color/light_green_600"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_centre_vertical"
        app:layout_constraintTop_toBottomOf="@+id/card_grey">

        <ImageView
            android:id="@+id/iv_green"
            android:contentDescription="@string/no_description"
            style="@style/style_image_inside_card_view"
            android:src="@drawable/ic_eye_24" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/message_green"
        style="@style/heading_title_start"
        android:text=""
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/card_green"
        app:layout_constraintStart_toStartOf="@+id/guide_line_centre_vertical"
        app:layout_constraintTop_toTopOf="@+id/card_green" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_child_heart"
        style="@style/style_card_view"
        app:cardBackgroundColor="@color/grey_500"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_end"
        app:layout_constraintStart_toStartOf="@+id/guide_line_start"
        app:layout_constraintTop_toBottomOf="@+id/card_green">

        <ImageView
            android:id="@+id/iv_child_heart"
            style="@style/style_image_inside_card_view"
            android:contentDescription="@string/no_description"
            android:src="@drawable/baseline_bloodtype_24"
            android:visibility="visible" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_child_height"
        style="@style/style_card_view"
        app:cardBackgroundColor="@color/grey_500"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_end"
        app:layout_constraintStart_toStartOf="@+id/guide_line_start"
        app:layout_constraintTop_toBottomOf="@+id/card_child_heart">

        <ImageView
            android:id="@+id/iv_child_height"
            style="@style/style_image_inside_card_view"
            android:contentDescription="@string/no_description"
            android:src="@drawable/baseline_bloodtype_24"
            android:visibility="visible" />
    </com.google.android.material.card.MaterialCardView>


