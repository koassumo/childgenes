                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_line_brown_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.47" />

                <ImageView
                    android:id="@+id/iv_child_gradient_brown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_brown"
                    android:contentDescription="@string/no_description" />

                <include
                    android:id="@+id/include"
                    layout="@layout/symbol_eye"
                    tools:layout_editor_absoluteX="20dp"
                    tools:layout_editor_absoluteY="12dp" />

                <TextView
                    style="@style/title_button_bottom_start"
                    android:text="@string/brown"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ProgressBar
                    android:id="@+id/progress_bar_brown"
                    style="@style/my_progress_bar"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guide_line_brown_center"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/message_brown"
                    style="@style/title_button_top_nostart"
                    android:text="40 %"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="@+id/guide_line_brown_center"
                    app:layout_constraintTop_toBottomOf="@+id/progress_bar_brown" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>





        <!-- 2 Blue/grey-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_child_grey"
