    <!-- 3 Green -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/eye_select_card_green"
        style="@style/card_parent"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_centre_vertical"
        app:layout_constraintStart_toStartOf="@id/guide_line_start"
        app:layout_constraintTop_toBottomOf="@+id/eye_select_card_grey">

        <ImageView
            android:id="@+id/iv_empty_gradient_green"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_green"
            android:contentDescription="@string/no_description" />

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/card_constraint">

            <ImageView
                android:id="@+id/blood_select_3_icon"
                style="@style/iv_icon"
                android:src="@drawable/ic_eye_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/blood_select_3_hint"
                style="@style/txt_hint_inner_right"
                android:text="@string/green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/blood_select_3_icon"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

