    <TextView
        android:id="@+id/eye_select_title"
        style="@style/txt_title_margin_top"
        android:text="@string/select_eyes_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 1 Brown-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/eye_select_card_brown"
        style="@style/card_parent"
        android:layout_marginTop="@dimen/step_normal_plus"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_centre_vertical"
        app:layout_constraintStart_toStartOf="@id/guide_line_start"
        app:layout_constraintTop_toBottomOf="@+id/eye_select_title">
        <!--        app:cardBackgroundColor="@color/eyesColorBrown"-->

        <ImageView
            android:id="@+id/iv_empty_gradient_brown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_brown"
            android:contentDescription="@string/no_description" />
        <!--        empty pic is not requied to use-->
        <!--        android:src="@drawable/emp_24" />-->

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/card_constraint">


            <ImageView
                android:id="@+id/eye_select_1_icon"
                style="@style/iv_icon"
                android:src="@drawable/ic_eye_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/eye_select_1_hint"
                style="@style/txt_hint_inner_right"
                android:text="@string/brown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/eye_select_1_icon"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

