    <!-- 2 Blue/grey-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/eye_select_card_grey"
        style="@style/card_parent"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_centre_vertical"
        app:layout_constraintStart_toStartOf="@id/guide_line_start"
        app:layout_constraintTop_toBottomOf="@+id/eye_select_card_brown">

        <ImageView
            android:id="@+id/iv_empty_gradient_blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_blue"
            android:contentDescription="@string/no_description" />

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/card_constraint">

            <ImageView
                android:id="@+id/blood_select_2_icon"
                style="@style/iv_icon"
                android:src="@drawable/ic_eye_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/blood_select_2_hint"
                style="@style/txt_hint_inner_right"
                android:text="@string/blue_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/blood_select_2_icon"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

